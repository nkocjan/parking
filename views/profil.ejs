    defer
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
  </head>
  <body>
    <nav class="navbar navbar-expand-md">
      <div class="container">
        <button
          class="navbar-toggler"
          data-bs-toggle="collapse"
          data-bs-target="#nav"
          aria-controls="nav"
          aria-label="Expand Navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div
          class="collapse navbar-collapse justify-content-center mt-4 mb-4"
          id="nav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a href="index" class="nav-link">Strona główna</a>
            </li>
            <li class="nav-item">
              <a href="wniosek" class="nav-link">Wyślij wniosek</a>
            </li>
            <li class="nav-item">
              <a
                href="sprawdz_rezerwacje"
                class="nav-link "
                >
                Sprawdź swoją rezerwacje
              </a>
            </li>
            <li class="nav-item">
              <a href="profil" class="nav-link active" aria-current="page">Profil</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container">
      <div class="wyswietl_wszystko">
        Podaj swoje imie, nazwisko, oraz numer telefonu, aby wyświetlić
        wszystkie twoje rezerwacje.
        <form method="post" action="/profil">
          <fieldset>
            <label for="imie">Imie</label>
            <input type="text" id="imie" name="imie" />
            <label for="nazwisko">Nazwisko</label>
            <input type="text" id="nazwisko" name="nazwisko" />
            <label for="numer">Numer telefonu</label>
            <input type="number" id="numer" name="numer" />
            <br />
            <br />
            <br />
            <label for="reservationNumber">Numer rezerwacji</label>
            <input
              type="number"
              id="reservationNumber"
              name="reservationNumber" />
            <label for="reservationCode">Kod rezerwacji</label>
            <input type="number" id="reservationCode" name="reservationCode" />
            <br />
            <button type="submit">Wyświetl rezerwacje</button>
          </fieldset>
        </form>
      </div>
      <div class="wyswietlanie_rezerwacji_wszystkic">
        <%- locals.newReservationDiv %>
      </div>
    </div>
    <div style="position: fixed; right: 10px; left: 10px">
      <form method="POST" action="/aktualizacja_bazy">
        <button type="submit">admin</button>
      </form>
    </div>
  </body>
</html>
